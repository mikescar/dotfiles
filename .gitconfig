	name = mikescar
	email = mike@tenthpeak.us
	signingkey = xxxxxxxxxxxxxxxx
[alias]
    co = checkout
    ci = commit
    csv = log --date=iso --pretty=format:'"%an","%ad","%s"'
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    l  = log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    lc  = log --pretty=format:' -%d %s' --abbrev-commit --date=relative
    cs = commit -s
    assume   = update-index --assume-unchanged
    unassume = update-index --no-assume-unchanged
    assumed  = "!git ls-files -v | grep ^h | cut -c 3-"
[color]
  branch = auto
  diff = auto
  status = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[push]
    default = simple
[core]
    mergeoptions = --no-edit
[commit]
	gpgsign = true
